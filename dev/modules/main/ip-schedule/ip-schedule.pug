mixin ip-schedule-message
	.ip-schedule__message&attributes(attributes)
		.text-center
			p Sorry, there are no events available for your chosen sport on this date


mixin ip-schedule-slider
	.ip-schedule__slider&attributes(attributes)
		.ip-schedule__prev
			i.fal.fa-angle-left
		.ip-schedule__wrap
			.ip-schedule__btn.ip-schedule__btn--active All Sports
			.ip-schedule__btn Soccer
		.ip-schedule__next
			i.fal.fa-angle-right